  },
  "homepage": "https://github.com/mvkariath/employee-appraisal-be#readme",
  "dependencies": {
    "express": "^5.1.0",
    "pg": "^8.16.0",
    "typeorm": "^0.3.24",
    "typeorm-naming-strategies": "^4.1.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  }
